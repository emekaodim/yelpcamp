<%- include ('../partials/header') %>

<div class="container mt-5">
  <div class="card shadow-lg border-0">
    
    <!-- Campground Image -->
    <img 
      src="<%= campground.image %>" 
      class="card-img-top" 
      alt="<%= campground.name || 'Campground Image' %>" 
      style="height: 400px; object-fit: cover;"
    >

    <!-- Campground Details -->
    <div class="card-body">
      <h2 class="card-title text-center mb-3"><%= campground.name %></h2>

      <!-- Campground Price -->
      <p class="text-center fs-4 text-primary">
        <% if (campground.price !== undefined) { %>
          ₦<%= campground.price.toLocaleString() %>
        <% } else { %>
          <span class="text-muted">No price listed</span>
        <% } %>
      </p>


      <!-- Campground Description -->
      <p class="card-text fs-5 text-muted text-center"><%= campground.description %></p>

      <!-- Author Info -->
      <p class="text-center">
        <em>Submitted by <%= campground.author?.username || "Anonymous" %></em>
      </p>

      <!-- Show Edit & Delete buttons only if user is logged in and is the author -->
      <% if (currentUser && campground.author && campground.author.id == currentUser._id.toString()) { %>
        <div class="text-center mb-3">
          <a class="btn btn-warning me-2" href="/campgrounds/<%= campground._id %>/edit">Edit</a>

          <form action="/campgrounds/<%= campground._id %>" method="POST" class="d-inline">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this campground?')">
              Delete
            </button>
          </form>
        </div>
      <% } %>

      <!-- Add Comment Button -->
      <div class="text-center mt-4">
        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">
          Add New Comment
        </a>
      </div>

      <!-- Comments Section -->
      <div class="mt-5">
        <h4 class="text-center mb-4">Comments (<%= campground.comments.length %>)</h4>

        <% if (campground.comments.length > 0) { %>
          <div class="list-group">
            <% campground.comments.forEach(comment => { %>
              <div class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                  <p class="mb-1"><%= comment.text %></p>
                  <small class="text-muted">— <%= comment.author?.username || "Anonymous" %></small>
                </div>

                <% if (currentUser && comment.author && comment.author.id == currentUser._id.toString()) { %>
                  <div class="btn-group">
                    <!-- Edit Icon -->
                    <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-sm btn-outline-primary" title="Edit">
                      <i class="fas fa-edit"></i>
                    </a>

                    <!-- Delete Icon -->
                    <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>" method="POST" onsubmit="return confirm('Delete this comment?')">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-sm btn-outline-danger ms-1" title="Delete">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                <% } %>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="alert alert-info text-center">
            No comments yet. Be the first to comment!
          </div>
        <% } %>
      </div>
    </div>

    <!-- Footer -->
    <div class="card-footer text-center">
      <a href="/campgrounds" class="btn btn-outline-secondary">← Back to Campgrounds</a>
    </div>
  </div>
</div>

<%- include ('../partials/footer') %>
